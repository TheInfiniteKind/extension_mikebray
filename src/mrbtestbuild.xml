
<project name="mrbtest" basedir=".">
	<target name="mrbtest">
	    <javac target="${target}" source="${src}" srcdir="${src}" debug="${debug}" optimize="${optimize}"
	      classpathref="classpath"  destdir="${build}"
	      includes="com/moneydance/modules/features/mrbtest/**"/>

	    <jar destfile="${dist}/mrbtest.mxt">
	      <fileset dir="${src}" includes="
	             com/moneydance/modules/features/mrbtest/meta_info.dict
	              com/moneydance/modules/features/mrbtest/*.gif
	             com/moneydance/modules/features/mrbtest/*.jpg
	             com/moneydance/modules/features/mrbtest/*.jpeg"/>
	      <fileset dir="${build}" includes="com/moneydance/modules/features/mrbtest/**"/>
	      <zipgroupfileset  dir="${lib}" includes="**/mrbutil.jar" />
	    </jar>

	    <java newenvironment="true" 
	      classpathref="classpath"
	      classname="com.moneydance.admin.KeyAdmin">
	      <arg value="signextjar"/>
	      <arg value="${privkeyfile}"/>
	      <arg value="${privkeyid}"/>
	      <arg value="mrbtest"/>
	      <arg line="${dist}/mrbtest.mxt"/>
	    </java>
	    <delete file="${dist}/mrbtest.mxt" verbose="true" failonerror="false" />
	    <move file="./s-mrbtest.mxt" tofile="${dist}/mrbtest.mxt"
	verbose="true" failonerror="false" />
	    <copy file="${dist}/mrbtest.mxt" tofile="${install}/mrbtest.mxt"
	verbose="true" failonerror="false" /> 
		<echo>the current time is ${TODAY_UK}</echo>
	 	</target> 
	<target name="cleanmrbtest">
		<delete>
			<fileset dir="${build}">
			    <include name="com/moneydance/modules/features/mrbtest/*.class"/>
			</fileset>
		</delete>
	</target>
	</project>
	